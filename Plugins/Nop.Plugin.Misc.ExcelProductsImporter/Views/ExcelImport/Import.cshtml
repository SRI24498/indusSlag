@model object
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Excel Product Import";
}
<div class="content">
    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading">Upload Excel (25 sheets)</div>
            <div class="panel-body">
                <form asp-controller="ExcelImport" asp-action="Import" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Excel file</label>
                        <div class="col-md-9">
                            <input type="file" name="csvFile" accept=".csv" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-primary">Import</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>